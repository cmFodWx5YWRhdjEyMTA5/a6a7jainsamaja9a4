<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.js.jainsamaj.fragments.NotificationWallFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvWall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />
                    <TextView
                        android:id="@+id/tvLEmptyTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/tv_wall_empty"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:visibility="gone" />
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdNotiBanner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        fresco:placeholderImage="@color/colorWhite" />
                </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>
