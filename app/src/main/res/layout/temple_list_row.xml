<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdTLImg"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_55sdp"
                android:layout_alignParentLeft="true"
                fresco:placeholderImage="@color/colorGrey"
                fresco:roundAsCircle="true" />

            <TextView
                android:id="@+id/tvTLName"
                style="@style/JSTextBlackStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/ivArrow"
                android:layout_toRightOf="@id/sdTLImg"
                android:text="@string/default_txt" />

            <TextView
                android:id="@+id/tvTLAddress"
                style="@style/JSTextGreyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTLName"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toLeftOf="@+id/ivArrow"
                android:layout_toRightOf="@id/sdTLImg"
                android:text="@string/default_txt" />

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_right_arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/colorGrey" />
    </LinearLayout>


</LinearLayout>